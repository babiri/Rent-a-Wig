<div class="card-category">
  Wigs
</div>

<div class="d-flex m-4">
  <div class="side-menu">
    <%= link_to 'Add a new wig', new_wig_path %>
    side menu
  </div>

  <div class="container">
    <div class="row">
      <% @wigs.each do |wig| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
          <%= link_to wig_path(wig) do %>
          <div class="card">
          <%= cl_image_tag wig.photo, crop: :fill %>
            <div class="card-infos">
              <div>
                <h2>
                  <%= wig.name  %>
                </h2>
                <p><%= wig.style  %></p>
                <p><%= wig.style %> - <%= wig.color %> - <%= wig.size %></p>
              </div>
              <h2 class="card-pricing"><%=wig.price %> â‚¬/dia</h2>
              <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-user avatar-bordered"/>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>


